  <style type="text/css">
	*{margin:0px;padding:0px;}
	body,html{height:100%;background:black;}
	section{width:300px;height:300px;margin:50px auto;perspective:800px;}
	section div{width:200px;height:200px;position:relative;transform-style:preserve-3d;transition:2s;transform:translateZ(-100px) rotateX(-26deg) rotateY(45deg);}
	section div ul li{list-style:none;width:200px;height:200px;border:1px solid red;position:absolute;left:0px;top:0px;color:white;font-weight:bolder;font-size:72px;text-align:center;line-height:200px;}
	section div ul li:nth-child(1){transform: translateZ(100px);background:#ffcc99;}
	section div ul li:nth-child(2){transform-origin:left;transform: translateZ(100px) rotateY(90deg);background:#ff33ff;}
	section div ul li:nth-child(3){transform-origin:bottom;transform: translateZ(100px) rotateX(90deg);background:#66ff33;}
	section div ul li:nth-child(4){transform-origin:top;transform:translateZ(100px) rotateX(-90deg);background:#00ffff;}
	section div ul li:nth-child(5){transform-origin:right;transform:translateZ(100px) rotateY(-90deg);background:#99ff00;}
	section div ul li:nth-child(6){transform:translateZ(-100px);background:#0066ff;}

section div:hover{animation:dh 5s infinite;}
@-webkit-keyframes dh{

	0%{transform:  translateZ(-150px) rotateX(-26deg) rotateY(45deg) rotateZ(0deg);}
	50%{transform:  translateZ(-150px) rotateX(-26deg) rotateY(360deg) rotateZ(0deg);}
	100%{transform:  translateZ(-150px) rotateX(-26deg) rotateY(360deg) rotateZ(360deg);}

}
  </style>
 </head>
 <body>
	
	<section>
		<div>
			<ul>
				<li>1</li>
				<li>2</li>
				<li>3</li>
				<li>4</li>
				<li>5</li>
				<li>6</li>
			</ul>
		</div>
	</section>


  <script>
    </script>
